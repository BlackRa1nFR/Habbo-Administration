<% include ../../header %>
<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-white">
        <div class="panel-heading">
            <h6 class="panel-title text-semibold">Create New Article</h6>
        </div>
        <div class="panel-body">
          <form method="post" action="/hotel/news/create">
            <div class="form-group form-group-material">
              <label class="control-label animate">Title</label>
              <input name="title" type="text" class="form-control">
            </div>
            <div class="form-group form-group-material">
              <label class="control-label animate">Image Link</label>
              <input name="image" type="text" class="form-control">
            </div>
            <div class="form-group form-group-material">
              <label class="control-label animate">Content</label>
              <textarea name="content" class="form-control"></textarea>
            </div>
            <div class="form-group form-group-material">
              <input type="submit" class="btn" value="Save Changes">
            </div>
          </form>
        </div>
    </div>
  </div>
</div>

<script src="//cdn.ckeditor.com/4.6.2/full/ckeditor.js"></script><script>
  CKEDITOR.replace('content', {
    height: 700,
  } );
</script>
