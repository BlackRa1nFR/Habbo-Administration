<% include ../../header %>
<div class="row">
  <div class="col-lg-2">
    <div class="panel panel-flat">
      <div class="panel-heading">
        <h6 class="panel-title">Information <a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
        <div class="heading-elements">
          <ul class="icons-list">
            <li><a href="#"><i class="icon-wrench3"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="panel-body">
        <p>These options are only supported on websites utilizing our cms.</p>
      </div>
    </div>
    <div class="panel panel-flat">
      <div class="panel-heading">
        <h6 class="panel-title">System Build<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
        <div class="heading-elements">
          <ul class="icons-list">
            <li><a href="#"><i class="icon-info22"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Variable</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
              <tr>
                <td>Build</td>
                <td><%= settings.build %></td>
              </tr>
              <tr>
                <td>Database</td>
                <td><%= settings.database %>DB</td>
              </tr>
            </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="panel panel-flat">
      <div class="panel-body">
            <form method="post" action="/cms/customize/register">
                <h4>User Data</h4>
                <div class="form-group">
                    <label>Motto</label>
                    <input name="register_motto" type="text" class="form-control" value="<%= config.register_motto %>">
                </div>
                <div class="form-group">
                    <label>Look</label>
                    <input name="register_look" type="text" class="form-control" value="<%= config.register_look %>">
                </div>
                <h4>Starting Currency</h4>
                <div class="form-group">
                    <label>Credits</label>
                    <input name="register_credits" type="text" class="form-control" value="<%= config.register_credits %>">
                </div>
                <div class="form-group">
                    <label>Pixels</label>
                    <input name="register_pixels" type="text" class="form-control" value="<%= config.register_pixels %>">
                </div>
                <div class="form-group">
                    <label>Points</label>
                    <input name="register_points" type="text" class="form-control" value="<%= config.register_points %>">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" style="float:right;" value="Update">
                </div>
            </form>
  </div>
</div>
