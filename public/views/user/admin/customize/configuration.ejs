<% include ../../header %>

<div class="row">
  <div class="col-lg-2">
    <div class="panel panel-flat">
      <div class="panel-heading">
        <h6 class="panel-title">Navigation<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
        <div class="heading-elements">
          <ul class="icons-list">
            <li><a href="#"><i class="icon-wrench3"></i></a></li>
          </ul>
        </div>
      </div>

      <div class="list-group no-border no-padding-top">
        <a data-target="#basic" data-toggle="tab" class="list-group-item"><i class="icon-pencil"></i> Basic Settings</a>
        <a data-target="#functionality" data-toggle="tab" class="list-group-item"><i class="icon-cog3"></i> Functionality</a>
        <a data-target="#gmail" data-toggle="tab" class="list-group-item"><i class="icon-mail5"></i> Gmail Support</a>
        <a data-target="#compatibility" data-toggle="tab" class="list-group-item"><i class="icon-spinner9"></i> Compatibility</a>
        <div class="list-group-divider"></div>
        <a href="/admin/errors" class="list-group-item"><i class="icon-warning"></i> <span class="badge bg-danger pull-right"><%= errors.length %></span> Error Reporting</a>
      </div>
    </div>
    <div class="panel panel-flat">
      <div class="panel-heading">
        <h6 class="panel-title">System Build<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
        <div class="heading-elements">
          <ul class="icons-list">
            <li><a href="#"><i class="icon-info22"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Variable</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
              <tr>
                <td>Build</td>
                <td><%= settings.build %></td>
              </tr>
              <tr>
                <td>Database</td>
                <td><%= settings.database %>DB</td>
              </tr>
            </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="panel panel-flat">
      <div class="panel-body">
        <div class="tab-content">

          <div class="tab-content">
            <div class="tab-pane has-padding active" id="basic">
              <form method="post" action="/admin/customize/configuration">
                  <h4>Basic Options</h4>
                  <div class="form-group">
                      <label>Branding</label>
                      <input name="branding" type="text" class="form-control" value="<%= config.branding %>">
                  </div>
                  <div class="form-group">
                      <label>Short Branding</label>
                      <input name="short_branding" type="text" class="form-control" value="<%= config.short_branding %>">
                  </div>
                  <div class="form-group">
                      <label>Web Folder</label>
                      <input name="web_folder" type="text" class="form-control" value="<%= config.web_folder %>">
                  </div>
                  <div class="form-group">
                      <label>SWF Folder</label>
                      <input name="swf_folder" type="text" class="form-control" value="<%= config.swf_folder %>">
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Update" style="float:right;">
                  </div>
                </form>
            </div>

            <div class="tab-pane has-padding" id="functionality">
              <form method="post" action="/admin/customize/configuration">
                <h4>Core Functionality</h4>
                <div class="form-group">
                    <label>Action Logging</label>
                    <select name="action_logging" class="form-control">
                        <% if (config.action_logging == 1) { %>
                            <option value="1" selected="">Enabled</option>
                            <option value="2">Disabled</option>
                        <% } else { %>
                            <option value="1">Enabled</option>
                            <option value="2" selected="">Disabled</option>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Strict Permissions</label>
                    <select name="strict_permissions" class="form-control">
                        <% if (config.strict_permissions == 1) { %>
                            <option value="1" selected="">Enabled</option>
                            <option value="2">Disabled</option>
                        <% } else { %>
                            <option value="1">Enabled</option>
                            <option value="2" selected="">Disabled</option>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Forum System</label>
                    <select name="forums" class="form-control">
                        <% if (config.forums == 1) { %>
                            <option value="1" selected="">Enabled</option>
                            <option value="2">Disabled</option>
                        <% } else { %>
                            <option value="1">Enabled</option>
                            <option value="2" selected="">Disabled</option>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Automatic Backups</label>
                    <select name="auto_backups" class="form-control">
                        <% if (config.auto_backups == 1) { %>
                            <option value="1" selected="">Enabled</option>
                            <option value="2">Disabled</option>
                        <% } else { %>
                            <option value="1">Enabled</option>
                            <option value="2" selected="">Disabled</option>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Update" style="float:right;">
                  </div>
                </form>
              </div>

            <div class="tab-pane has-padding" id="gmail">
              <form method="post" action="/admin/customize/configuration">
                <h4>Configure Gmail</h4>
                  <div class="form-group">
                    <label>Email System</label>
                    <select name="gmail" class="form-control">
                        <% if (config.gmail == 1) { %>
                            <option value="1" selected="">Enabled</option>
                            <option value="2">Disabled</option>
                        <% } else { %>
                            <option value="1">Enabled</option>
                            <option value="2" selected="">Disabled</option>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                      <label>Gmail Address</label>
                      <input name="gmail_user" type="text" class="form-control" value="<%= config.gmail_user %>">
                  </div>
                  <div class="form-group">
                      <label>Gmail Password</label>
                      <input name="gmail_pass" type="text" class="form-control" value="<%= config.gmail_pass %>">
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Update" style="float:right;">
                  </div>
                </form>
            </div>

            <div class="tab-pane has-padding" id="compatibility">
              <form method="post" action="/admin/customize/configuration">
                <h4>Compatiblity Management</h4>
                <div class="form-group">
                    <label>CMS Hashing</label>
                    <select name="daddy" class="form-control">
                        <option>MD5</option>
                        <option>SHA1</option>
                        <option>BCRYPT</option>
                    </select>
                </div>
                <div class="form-group">
                  <input type="submit" class="btn btn-success" value="Update" style="float:right;">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
