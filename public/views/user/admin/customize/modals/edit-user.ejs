<div id="edit_user<%= member.id %>" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        	<button type="button" class="close" data-dismiss="modal">&times;</button>
          <h5 class="modal-title"><i class="icon-menu7"></i> &nbsp;Editing <b><%= member.identifier %></b></h5>
        </div>
        <div class="modal-body">
          <form class="form-horizontal" method="post" action="/admin/customize/users/actions/update">
            <fieldset class="content-user">
              <legend class="text-bold">Basic Information</legend>

              <div class="form-group has-feedback has-feedback-left">
                <label>Identifier Nickname</label>
                <input type="hidden" name="id" value="<%= member.id %>">
                <input type="text" class="form-control input-xlg" name="username" value="<%= member.username %>">
                <div class="form-control-feedback">
                  <i class="icon-user"></i>
                </div>
              </div>

              <div class="form-group has-feedback has-feedback-left">
                <label>Administrative Group</label>
                <select class="form-control input-xlg" name="permission_group">
                  <% groups.forEach((group) => { %>
                    <% if (group.id == member.permission_group) { %>
                      <option value="<%= group.id %>" selected="" ><%= group.name %></option>
                    <% } else { %>
                      <option value="<%= group.id %>"><%= group.name %></option>
                    <% } %>
                  <% }) %>
                </select>
                <div class="form-control-feedback">
                  <i class="icon-chess-king"></i>
                </div>
              </div>

              <div class="form-group has-feedback has-feedback-left">
                <label>Full Name</label>
                <input type="text" class="form-control input-xlg" name="full_name" value="<%= member.full_name %>">
                <div class="form-control-feedback">
                  <i class="icon-profile"></i>
                </div>
              </div>

              <div class="form-group has-feedback has-feedback-left">
                <label>Personal Job Title</label>
                <input type="text" class="form-control input-xlg" name="position" value="<%= member.position %>">
                <div class="form-control-feedback">
                  <i class="icon-collaboration"></i>
                </div>
              </div>

            </fieldset>
          </div>
          <div class="modal-footer">
            <button class="btn btn-link" data-dismiss="modal"><i class="icon-cross"></i> Close</button>
  					<button type="submit" class="btn btn-primary"><i class="icon-check"></i> Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
