<% include ../../header %>

<div class="container-alt">
	<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="wrapper-page signup-signin-page">
        <div class="card-box">
          <div class="panel-heading">
            <h3 class="text-center">
              <img src="https://www.habbo.nl/habbo-imaging/avatarimage?headonly=1&figure=<%= account.look %>" class="img-circle">
              <br>
              Editing <strong class="text-custom"><%= account.username %></strong>
            </h3>
          </div>
          <div class="panel-body">
            <form class="form-horizontal m-t-20" method="post" action="/hotel/users/edit">

              <div class="row">
                <div class="col-md-6">
                  <h5>ID</h5>
									<input name="id" value="<%= account.id %>" type="hidden">
                  <input value="<%= account.id %>" class="form-control" required="" disabled="">
                </div>
                <div class="col-md-6">
                  <h5>Username</h5>
                  <input name="username" value="<%= account.username %>" class="form-control" required="">
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <h5>Rank</h5>
                  <select name="rank" class="form-control" required="">
                    <% ranks.forEach(r => {%>

                      <% if (r.id == account.rank) { %>
                        <option value="<%= r.id %>" selected=""><%= r.name %></option>
                      <% } else { %>
                        <option value="<%= r.id %>"><%= r.name %></option>
                      <% } %>

                    <% }) %>
                  </select>
                </div>
                <div class="col-md-6">
                  <h5>VIP</h5>
                  <select name="vip" class="form-control" required="">
                    <% if (account.vip == 1) { %>
                      <option value="1" selected="">Yes</option>
                      <option value="0">No</option>
                    <% } else { %>
                      <option value="1">Yes</option>
                      <option value="0" selected="">No</option>
                    <% } %>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <h5>Credits</h5>
                  <input name="credits" value="<%= account.credits %>" class="form-control" required="">
                </div>
                <div class="col-md-6">
                  <h5>Pixels</h5>
                  <input name="pixels" value="<%= account.activity_points %>" class="form-control" required="">
                </div>
              </div>

              <div class="row">
                <div class="form-group text-right m-t-20 m-b-0">
                  <div class="col-xs-12">
                    <button class="btn btn-pink text-uppercase waves-effect waves-light w-sm" type="submit">
                      Save Changes
                    </button>
                  </div>
                </div>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>

<% include ../../footer %>
