<% include ../../header %>

<div class="container-alt">
			<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<div class="wrapper-page signup-signin-page">
					<div class="card-box">
						<div class="panel-heading">
							<h3 class="text-center"> Finish your <strong class="text-custom">account</strong></h3>
              <p class="text-center">Welcome to xHabbo Administration, before you can start there's a few more details we need.</p>
						</div>

						<div class="panel-body">
							<div class="row">
                <form class="form-horizontal m-t-20" method="post">
								<div class="col-lg-6">
									<div class="p-20">
										<h4><b>Personal Details</b></h4>
											<div class="form-group ">
												<div class="col-xs-12">
													<input name="name" placeholder="Real Name" class="form-control" type="text" required="">
												</div>
											</div>

											<div class="form-group">
												<div class="col-xs-12">
													<input name="email" placeholder="Email" class="form-control" type="email" required="">
												</div>
                      </div>
									</div>
								</div>


								<div class="col-lg-6">
									<div class="p-20">
										<h4><b>Extra Features</b></h4>
											<div class="form-group ">
												<div class="col-xs-12">
													<input name="avatar" placeholder="Avatar Image (Direct Link)" class="form-control" type="text" required="">
												</div>
											</div>

											<div class="form-group">
												<div class="col-xs-12">
													<input name="password" placeholder="Password" class="form-control" type="password" required="">
												</div>
											</div>



											<div class="form-group text-right m-t-20 m-b-0">
												<div class="col-xs-12">
													<button class="btn btn-pink text-uppercase waves-effect waves-light w-sm" type="submit">
														Complete Account
													</button>
												</div>
											</div>

										</form>
									</div>
								</div>

							</div>

						</div>
					</div>

				</div>
			</div>
		</div>
		</div>

<% include ../../footer %>
