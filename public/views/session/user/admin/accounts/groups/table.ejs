<% include ../../../header %>
<div class="row">
    <div class="col-lg-8">
        <div class="card-box">
            <div class="row">
                <div class="col-sm-8">
                    <form method="post" action="/admin/groups/search">
                        <div class="form-group contact-search m-b-30">
                            <input name="username" type="text" class="form-control" placeholder="Search...">
                            <button type="submit" class="btn btn-white"><i class="fa fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-sm-4">
                    <a href="/admin/groups/create" class="btn btn-default btn-md waves-effect waves-light m-b-30" data-animation="fadein" data-plugin="custommodal" data-overlayspeed="200" data-overlaycolor="#36404a"><i class="md md-add"></i> Create Group</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mails m-0 table table-actions-bar">
                    <thead>
                        <tr>
                          <th style="width:10%;">Avatar</th>
                          <th>Name</th>
                          <th>Members</th>
                          <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% groups.forEach(g => { %>
                        <tr>
                            <td> <img src="<%= g.avatar %>" title="contact-img" class="img-circle thumb-sm"> </td>
                            <td ><%= g.name %> </td>
                            <td> <%= g.members.length %> </td>
                            <td>
                              <a href="/admin/groups/<%= g.id %>" class="table-action-btn"><i class="md md-edit"></i></a>
                              <a href="/admin/groups/delete/<%= g.id %>" class="table-action-btn"><i class="md md-close"></i></a>
                            </td>
                        </tr>
                      <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card-box">
            <div class="contact-card">
                <a class="pull-left" href="#">
                    <img class="img-circle" src="<%= user.avatar %>">
                </a>
                <div class="member-info">
                    <h4 class="m-t-0 m-b-5 header-title"><b><%= user.name %></b></h4>
                    <p class="text-muted"><%= user.position %></p>
                    <p class="text-dark">
                      <i class="md md-business m-r-10"></i><small><%= user.email %></small>
                    </p>
                </div>
            </div>
            <div>
                <div class="p-20">
                    <h4 class="m-b-20 header-title"><b>Activities</b></h4>
                    <div class="nicescroll p-l-r-10" style="max-height: 555px; overflow: hidden; outline: none;" tabindex="5000">
                        <div class="timeline-2">
                            <div class="time-item">
                                <div class="item-info">
                                    <div class="text-muted"><small>5 minutes ago</small>
                                    </div>
                                    <p><strong><a href="#" class="text-info"><%= user.username %></a></strong> said <strong>"to be added"</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<% include ../../../footer %>
