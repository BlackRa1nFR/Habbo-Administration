<% include ../../../header %>

<div class="container-alt">
			<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<div class="wrapper-page signup-signin-page">
					<div class="card-box">
						<div class="panel-heading">
							<h3 class="text-center"> Editing <strong class="text-custom"><%= account.username %></strong></h3>
						</div>

						<div class="panel-body">
							<div class="row">
                <form class="form-horizontal m-t-20" method="post">
								<div class="col-lg-6">
									<div class="p-20">
											<div class="form-group ">
												<div class="col-xs-12">
                          <h5><b>Real Name</b></5>
													<input name="name" value="<%= account.name %>" class="form-control" type="text" required="">
												</div>
											</div>

											<div class="form-group">
												<div class="col-xs-12">
                          <h5><b>Email</b></5>
													<input name="email" value="<%= account.email %>" class="form-control" type="email" required="">
												</div>
                      </div>
									</div>
								</div>


								<div class="col-lg-6">
									<div class="p-20">
											<div class="form-group ">
												<div class="col-xs-12">
                          <h5><b>Avatar Image</b></5>
													<input name="avatar" value="<%= account.avatar %>" class="form-control" type="text" required="">
												</div>
											</div>

											<div class="form-group">
												<div class="col-xs-12">
                          <h5><b>Position</b></5>
													<input name="position" value="<%= account.position %>" class="form-control" type="text" required="">
												</div>
											</div>



											<div class="form-group text-right m-t-20 m-b-0">
												<div class="col-xs-12">
													<button class="btn btn-pink text-uppercase waves-effect waves-light w-sm" type="submit">
														Save Changes
													</button>
												</div>
											</div>

										</form>
									</div>
								</div>

							</div>

						</div>
					</div>

				</div>
			</div>
		</div>
		</div>

<% include ../../../footer %>
