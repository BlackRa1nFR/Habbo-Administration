<html>
  <head>
    <title>xHabbo V - Database Settings</title>
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css">
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,600" rel="stylesheet" type="text/css">
    <style>
      body {
        background-color: #fff;
      }
      img {
        margin-top: 5%;
      }
    </style>
  </head>
  <body>
    <center>
        <img src="https://i.imgur.com/KUae9yX.png">
        <form class="pure-form pure-form-stacked" method="post">
          <fieldset style="width:15%;">

              <label>Host</label>
              <input name="host" type="text" placeholder="127.0.0.1">

              <label>User</label>
              <input name="user" type="text" placeholder="root">

              <label>Pass</label>
              <input name="pass" type="password" placeholder="password">

              <label>Name</label>
              <input name="name" type="text" placeholder="database">

              <button type="submit" class="pure-button pure-button-primary" style="float:right;">Test Connection</button>
          </fieldset>
      </form>
    </center>
  </body>
</html>
